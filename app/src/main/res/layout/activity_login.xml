<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity3"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_wb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="166dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in to your account"
        android:textSize="18sp"
        android:textColor="#BABABA"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_wb"
        />

    <EditText
        android:id="@+id/et_usernameLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Full Name"
        android:background="@drawable/bg_corner"
        android:drawableStart="@drawable/ic_person"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FAE6CC"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:drawableTint="#17318D"
        app:layout_constraintTop_toBottomOf="@+id/tv_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_passwordLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Password"
        android:drawableStart="@drawable/ic_lock"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#FAE6CC"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:drawableTint="#17318D"
        android:textColorHint="#1C3E1D"
        app:layout_constraintTop_toBottomOf="@+id/et_usernameLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_loginLogin"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:backgroundTint="#17318D"
        app:cornerRadius="32dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/tv_or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_SignUpLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_SignUpLogin"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="#FAE7CD"
        app:cornerRadius="32dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>